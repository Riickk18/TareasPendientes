<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_cardView"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_cardView">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:paddingLeft="8dp"/>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_below="@id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:editable="false"
                android:enabled="false"/>

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo"
                android:layout_toRightOf="@id/checkBox"
                android:textSize="@dimen/size_description_cardView"/>

            <TextView
                android:id="@+id/fechaCreacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descripcion"
                android:layout_toRightOf="@id/checkBox"
                android:textSize="@dimen/size_description_cardView"/>

            <TextView
                android:id="@+id/fechaFinalizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fechaCreacion"
                android:layout_toRightOf="@id/checkBox"
                android:textSize="@dimen/size_description_cardView"/>

            <TextView
                android:id="@+id/estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fechaFinalizacion"
                android:layout_toRightOf="@id/checkBox"
                android:textSize="@dimen/size_description_cardView"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>